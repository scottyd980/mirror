<div class="note--top">
    {{#if (eq isAnonymous "false")}}
        <div class="note--provider">
            {{data.user.username}}
        </div>
    {{/if}}
    <div class="note--content">
        {{yield}}
    </div>
</div>
<div class="note--bottom">
    <div class="note--action">
        {{#if isModerator}}
            <a {{action onFlag}} class="btn btn-default btn-outline-alt"><i class="fa fa-flag fa-fw"></i> <span class="hidden-xs">Flag For Action</span></a>
        {{/if}}
    </div>
</div>