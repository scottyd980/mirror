{{#modal-dialog container-class='modal' translucentOverlay=true targetAttachment='none'}}
  <div class="modal-dialog {{type}}">
    <div class="modal-content">
      <div class="modal-header">
        <button {{action 'close'}} type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{title}}</h4>
      </div>
      <div class="modal-body">
        {{yield}}
      </div>
      <div class="modal-footer">
        <button {{action 'close'}} type="button" class="btn btn-default">Got It</button>
      </div>
    </div>
  </div>
{{/modal-dialog}}
