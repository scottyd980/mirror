<div class="nav-push">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        {{#x-card title="Sprint Scores" overlay=submitted}}
            <div class="row">
                <div class="col-sm-4">
                    <p><strong>Lowest Score</strong></p>
                    <div class="color-box danger-bg text-center white-text">
                      <p>{{fa-icon "star-o" fixedWidth=true}} {{low_score.score}}</p>
                    </div>
                </div>

                <div class="mg-bottom-md visible-xs"></div>

                <div class="col-sm-4">
                    <p><strong>Average Score</strong></p>
                    <div class="color-box warning-bg text-center">
                      <p>{{fa-icon "star-half-o" fixedWidth=true}} {{average_score}}</p>
                    </div>
                </div>

                <div class="mg-bottom-md visible-xs"></div>

                <div class="col-sm-4">
                    <p><strong>Highest Score</strong></p>
                    <div class="color-box primary-bg text-center white-text">
                      <p>{{fa-icon "star" fixedWidth=true}} {{high_score.score}}</p>
                    </div>
                </div>
            </div>
        {{/x-card}}
      </div>
      <div class="col-md-4">
        {{#if model.parent.isModerator}}
          {{#x-card title="Moderator"}}
            <a onclick={{route-action "changeRetrospectiveState" 3}} class="btn btn-block btn-success">Continue</a>
          {{/x-card}}
        {{/if}}
        {{#x-card title="Retrospective Participants"}}
            {{retrospective-submission-list
                members=model.parent.retrospective.participants
                currentUser=model.parent.currentUser
                userList=true
            }}
        {{/x-card}}
      </div>
    </div>
  </div>
</div>
