<div class="nav-push">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        {{#x-card title="Provide feedback for the sprint" overlay=submitted}}
            <div class="row">
                <div class="col-md-6">
                    <label for="went-poorly-textarea"><p><strong>What went poorly?</strong></p></label>
                    {{#textarea rows="10" id="went-poorly-textarea" class="form-control"}}
                    {{/textarea}}
                </div>
                <div class="col-md-6">
                    <label for="went-well-textarea"><p><strong>What went well?</strong></p></label>
                    {{#textarea rows="10" id="went-well-textarea" class="form-control"}}
                    {{/textarea}}
                </div>
            </div>
        {{/x-card}}
        {{#if submitted}}
            <button disabled id="feedback-submit" {{action "submitScore"}} class="btn btn-block btn-success mg-bottom-lg">{{fa-icon "check" fixedWidth=true}} Feedback Submitted</button>
        {{else}}
            <button id="feedback-submit" {{action "submitScore"}} class="btn btn-block btn-success mg-bottom-lg">Submit Feedback</button>
        {{/if}}
      </div>
      <div class="col-md-4">
        {{#if model.parent.isModerator}}
          {{#x-card title="Moderator"}}
            <a onclick={{route-action "changeRetrospectiveState" 4}} class="btn btn-block btn-success">Continue</a>
          {{/x-card}}
        {{/if}}
        {{#x-card title="Retrospective Participants"}}
            {{retrospective-submission-list
                members=model.parent.team_members
                submitted=model.feedback 
                currentUser=model.parent.currentUser
            }}
        {{/x-card}}
      </div>
    </div>
  </div>
</div>
