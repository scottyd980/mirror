<div class="nav-push">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        {{#x-card title="Select a score based on how you think the sprint went"}}
            <div class="row text-center mg-bottom-md">
                <div class="col-md-3 col-md-offset-1 danger-text">
                    {{fa-icon "frown-o" size="4"}}
                </div>
                <div class="col-md-4 warning-text">
                    {{fa-icon "meh-o" size="4"}}
                </div>
                <div class="col-md-3 success-text">
                    {{fa-icon "smile-o" size="4"}}
                </div>
            </div>
            <div class="row">
                <div class="col-md-1 col-md-offset-1">1</div>
                <div class="col-md-1">2</div>
                <div class="col-md-1">3</div>
                <div class="col-md-1">4</div>
                <div class="col-md-1">5</div>
                <div class="col-md-1">6</div>
                <div class="col-md-1">7</div>
                <div class="col-md-1">8</div>
                <div class="col-md-1">9</div>
                <div class="col-md-1">10</div>
            </div>
        {{/x-card}}
      </div>
      <div class="col-md-4">
        {{#if model.isModerator}}
          {{#x-card title="Moderator"}}
            <a {{action "startRetrospective"}} class="btn btn-block btn-success">Continue</a>
          {{/x-card}}
        {{/if}}
        {{#x-card title="Retrospective Participants"}}
            {{retrospective-member-list
                members=model.team_members
                joined_members=model.retrospective.participants 
                currentUser=model.currentUser
            }}
        {{/x-card}}
      </div>
    </div>
  </div>
</div>
