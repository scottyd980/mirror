      <div class="col-md-8">
        {{#x-card title="Organizations"}}
          {{#if model.organizations}}
            {{organization-list 
              organizations=model.organizations
              viewOrganization=(route-action "viewOrganization")
            }}
          {{else}}
            It doesn't look like you're a member of any organizations.
          {{/if}}
        {{/x-card}}
      </div>
