<div class="container">
  <div class="row">
    <div class="col-md-8">
      {{#x-card title="Members"}}
        {{team-member-list
          members=model.members
          team=model.team
          currentUser=model.currentUser
          isAdmin=isAdmin
          onDelete=(route-action "deleteMember")}}
      {{/x-card}}
    </div>
    <div class="col-md-4">
      {{#x-card title="Helpful Tips"}}
        <ul class="tips">
          {{#if isAdmin}}
            <li>
              Make another team member a team admin using
              the <span class="success-text">{{fa-icon "arrow-up"}}</span>
              button.
            </li>

            <li>
              To remove a member from the team, select the respective
              <span class="danger-text">{{fa-icon "user-times"}}</span>
              button.
            </li>
          {{else}}

          {{/if}}

          <li>
            Use the <span class="info-text">{{fa-icon "user-circle"}}</span> button
            to view the team member's profile.
          </li>
        </ul>
      {{/x-card}}
    </div>
  </div>
</div>
