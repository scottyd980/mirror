<div class="nav-push">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          {{#if errors.length}}
            <div class="alert alert-danger" role="alert">
              {{fa-icon "exclamation-triangle"}} Please correct the highlighted fields below.
            </div>
          {{/if}}
          <form>
            <div class="form-group">
              {{input type="text" class="form-control" placeholder="Team Name" value=model.name}}
            </div>
            <hr/>
            {{#each teamMemberEmails as |teamMemberEmail|}}
              <div class="form-group input-group">
                {{input type="text" class="form-control" placeholder="Team Member Email" value=teamMemberEmail}}
                <span class="input-group-btn">
                  <button {{action "removeTeamMemberEmail"}} class="btn btn-danger simple-action" type="button">-</button>
                </span>
              </div>
            {{/each}}
            <div class="form-group input-group">
              {{input type="text" class="form-control" placeholder="Team Member Email" value=newTeamMemberEmail}}
              <span class="input-group-btn">
                <button {{action "addTeamMemberEmail"}} class="btn btn-success simple-action" type="button">+</button>
              </span>
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          {{#if errors.length}}
            <div class="alert alert-danger" role="alert">
              {{fa-icon "exclamation-triangle"}} Please correct the highlighted fields below.
            </div>
          {{/if}}
          <form>
            <div class="form-group input-group-icon">
              {{input type="text" class="form-control" id="login-username" placeholder="Username" value=model.username}}
              {{fa-icon "user" fixedWidth=true}}
            </div>
            <div class="form-group input-group-icon">
              {{input type="password" class="form-control" id="login-password" placeholder="Password" value=model.password}}
              {{fa-icon "key" fixedWidth=true}}
            </div>
            <button {{action "doLogin"}} type="submit" class="btn btn-success btn-lg btn-block">Create Team</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
