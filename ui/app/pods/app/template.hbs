{{outlet}}

{{#each notificationCenter.notifications as |notification|}}
  {{#if (eq notification.type "confirm")}}
    {{#x-confirm-modal
      title=notification.title
      type=notification.type
      onConfirm=notification.action}}
      {{notification.message}}
    {{/x-confirm-modal}}
  {{else}}
    {{#x-notification-modal
      title=notification.title
      type=notification.type}}
      {{notification.message}}
    {{/x-notification-modal}}
  {{/if}}
{{/each}}
