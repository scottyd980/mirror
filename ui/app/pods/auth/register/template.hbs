<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">
      {{#x-card onsubmit=(route-action 'doRegister') title='Register with Echomark' buttonText='Register'}}
        <div class="row">
          {{x-input classNames='col s12' type='text' label='Username' value=model.username}}
        </div>
        <div class="row">
          {{x-input classNames='col s12' type='email' label='Email' value=model.email}}
        </div>
        <div class="row">
          {{x-input classNames='col s12' type='password' label='Password' value=model.password}}
        </div>
        <div class="row">
          {{x-input classNames='col s12' type='password' label='Confirm Password' value=model.passwordConfirmation}}
        </div>
      {{/x-card}}
    </div>
  </div>
</div>
